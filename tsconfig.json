{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "ES6",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts"]
}
